{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "ngx-utils": {
            "projectType": "library",
            "root": "ngx-utils",
            "sourceRoot": "ngx-utils/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": { "project": "ngx-utils/ng-package.json" },
                    "configurations": {
                        "production": { "tsConfig": "ngx-utils/tsconfig.lib.prod.json" },
                        "development": { "tsConfig": "ngx-utils/tsconfig.lib.json" }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "ngx-utils/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                }
            }
        }
    },
    "cli": { "analytics": false }
}
